<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".MyActivity">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addEventName"
        android:ems="10"
        android:padding="10dp"
        android:hint="Event Name"
        android:textColor="@android:color/holo_blue_dark"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addEventLocation"
        android:ems="10"
        android:hint="Location"
        android:textColor="@android:color/holo_blue_dark"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addEventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10dp"
        android:id="@+id/addventDate"
        android:textColor="@android:color/holo_blue_dark"
        android:textCursorDrawable="@null"
        android:inputType="date"
        android:hint="Date"
        android:layout_below="@+id/addEventLocation"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@android:color/holo_blue_dark"
        android:textCursorDrawable="@null"
        android:padding="10dp"
        android:hint="Time"
        android:inputType="time"
        android:id="@+id/addventTime"

        android:layout_toStartOf="@+id/addEventSwitch"
        android:layout_below="@+id/addventDate"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="PM"
        android:textOff="AM"
        android:id="@+id/addEventSwitch"
        android:layout_below="@+id/addventDate"
        android:layout_alignParentEnd="true"
        android:checked="false" />


</RelativeLayout>